{
  "name": "icalendar-ripper",
  "version": "1.0.0",
  "description": "A data-driven web scraping tool that generates iCalendar (.ics) files from various websites",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "generate-calendars": "node --loader ts-node/esm index.ts",
    "web:dev": "cd web && vite",
    "web:build": "cd web && vite build",
    "web:preview": "cd web && vite preview",
    "build": "npm run generate-calendars && npm run web:build"
  },
  "dependencies": {
    "@js-joda/core": "^5.5.3",
    "@js-joda/locale_en-us": "^4.11.0",
    "@js-joda/timezone": "^2.18.0",
    "html-entities": "^2.6.0",
    "ical.js": "^1.5.0",
    "ics": "^3.1.0",
    "node-html-parser": "^6.1.5",
    "yaml": "^2.2.2",
    "zod": "^3.21.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "fuse.js": "^7.0.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8"
  }
}
