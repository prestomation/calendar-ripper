{
  "name": "icalendar-ripper",
  "version": "1.0.0",
  "description": "Data-driven web scraping of calendars to served ics files",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "generate-calendars": "tsx index.ts"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@js-joda/core": "^5.6.2",
    "@js-joda/locale_en-us": "^4.11.0",
    "html-entities": "^2.6.0",
    "ics": "^3.7.2",
    "node-html-parser": "^6.1.13",
    "yaml": "^2.4.1",
    "zod": "^3.22.4"
  }
}
